        %span.block-selected{ :id=> page_link_id }
          =# link_to_remote('', :url => forgeos_cms.unlink_admin_page_block_path(page_col.page, block), :method => :delete, :confirm => I18n.t('page.unlink.confirm').capitalize, :success => "$('##{page_link_id}').remove()", :html => { :class => 'big-icons big-icons-verti-delete-icon'})
