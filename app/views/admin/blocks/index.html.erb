<h1>List of blocks</h1>

<% @content_for_tools << link_to('Add a block', { :action => 'create' }, :class => 'add' ) %>

<div id="list_blocks">
  <table>
    <thead>
      <th>Title</th>
      <th>Linked pages</th>
      <th>Action</th>
    </thead>

    <tbody>
    <% unless @blocks.nil? or @blocks.blank? %>
      <% @blocks.each do |block| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= link_to block.title, :action => 'show', :id => block.id %></td>
        <td><%= block.pages.size %></td>
        <td>
          <%= link_to 'edit', { :action => 'edit', :id => block.id } %>
          -
          <%= link_to 'delete', { :action => 'delete', :id => block.id }, :confirm => 'Are you sure that you want to delete this block?' %>
          -
          <%= link_to 'edit links', { :action => 'edit_links', :id => block.id } %>
        </td>
      </tr>
      <% end %>  

    <% else %>
      <tr>
        <td colspan="3">No blocks</td> 
      </tr> 
    <% end %>

    </tbody>
  </table>
</div>

