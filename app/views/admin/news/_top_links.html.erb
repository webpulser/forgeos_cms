<% content_for :tools do %>
  <%= link_to(I18n.t('list').capitalize, url_for(:action => :index), :class => 'house' )%>
<% end %>

<% if new && !(new.new_record?) %>
  <% content_for :tools do %>
    <%= link_to(I18n.t('show').capitalize, admin_news_path(new)) %>
    <%= link_to(I18n.t('edit').capitalize, edit_admin_news_path(new)) %>
    <%= link_to(I18n.t('destroy').capitalize, admin_news_path(new), :confirm => I18n.t('new.destroy.confirm').capitalize, :method => :delete) %>
  <% end %>
<% end %>
