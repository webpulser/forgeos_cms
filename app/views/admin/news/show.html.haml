%h1
  = I18n.t('new.show').capitalize
- if @new
  %table
    %tr
      %th
        = I18n.t('new.author').capitalize
      %td
        = h @new.admin.fullname
    %tr
      %th
        = I18n.t('title').capitalize
      %td
        = h @new.title
    %tr
      %th
        = I18n.t('content').capitalize
      %td
        = @new.content
    %tr
      %th
        = I18n.t('new.date').capitalize
      %td
        = h @new.created_at.to_date
  %h2
    = I18n.t('comment', :count => @new.comments.count).capitalize
  %table
    %th
      = I18n.t('title')
    %th
      = I18n.t('comment.author')
    %th
      = I18n.t('comment.date')
    %th
      = I18n.t('actions')
    - @new.comments.each do |comment|
      %tr
        %td
          = comment.title
        %td
          = link_to(comment.person.fullname, [:admin, comment.person])
        %td
          = comment.created_at.to_date
        %td
          = link_to(I18n.t('show').capitalize, [:admin, @new, comment])
          \-
          = link_to(I18n.t('edit').capitalize, [:edit, :admin, @new, comment])
          \-
          = link_to(I18n.t('destroy').capitalize, [:admin, @new, comment], :confirm => I18n.t('comment.destroy.confirm').capitalize, :method => :delete)
