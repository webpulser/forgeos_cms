= include_tiny_mce_if_needed
- form_for [:admin, page], :html => { :multipart => true, :id => 'wrap' } do |f|
  .backgrounds.big-header
    = f.text_field :title
    .interact-links
      .borders.interact-button-left
      = submit_tag I18n.t('save_changes').capitalize, :class => 'backgrounds interact-button'
      .borders.interact-button-right
      = I18n.t('or')
      = link_to I18n.t('cancel').capitalize, admin_pages_path, :class => 'back-link'
  #content.grid_12.alpha.omega
    .inner-content
      %h2.permalink
        = I18n.t('permalink').capitalize
        \:
        = "#{request.protocol}#{request.host}/"
        = f.text_field :url
      = f.text_area :content, :class => 'mceEditor', :cols => 95
      .fieldset
        %h2
          = I18n.t('block', :count => 2)
        - link_to '#', :class => 'backgrounds static-content' do
          %span.big-icons
            Static content
        %a.backgrounds.widget{ :href => "#" }
          %span.big-icons
            Widget
        .block-container
          %span.block-type
            Widget
          %span.block-name
            Customers logo carousel
          %a.big-icons.gray-destroy{ :href => "#" }
        .block-container
          %span.block-type
            Static content
          %span.block-name
            Our company values
          %a.big-icons.gray-destroy{ :href => "#" }
  #right-sidebar.grid_4.alpha.omega
    .step.status.open
      %div
        %select.published{ :name => "status" }
          %option{ :selected => "selected", :value => "published" }
            published
          %option{ :value => "draft" }
            draft
          %option{ :value => "to-validate" }
            to validate
      .clear
      %p
        = I18n.t('page.published_on').capitalize
        %span.last-date= page.updated_at.to_date 
        /
          %br
          by
          %em
            Quentin Tousart
    .step
      = link_to I18n.t('page.preview'), '#', :class => 'small-icons preview' 
      = link_to I18n.t('page.duplicate'), '#', :class => 'small-icons duplicate' 
      = link_to I18n.t('page.delete'), '#', :class => 'small-icons delete' 
    .step.disabled
      %a.small-icons.step-title{ :href => "#" }
        Modification history
      .inner-step
        %p
          Modified on
          %span.last-date
            12/11/2009
          %br
          by
          %em
            Quentin Tousart
        %p
          Created on 11/11/2009
          %br
          by
          %em
            Quentin Tousart
    .step.open
      %a.small-icons.step-title{ :href => "#" }
        Tags
      .inner-step.tags
        %a.big-icons{ :href => "#" }
          Tag name
        %a.big-icons{ :href => "#" }
          Tag name
        %a.big-icons{ :href => "#" }
          Tag name
    .step.open
      %a.small-icons.step-title{ :href => "#" }
        Meta description
      .inner-step.meta
        %p
          %span
            = I18n.t('title').capitalize
            \:
          = f.text_field :title, :class => 'text'
        %p
          %span
            = I18n.t('description').capitalize
            \:
          = f.text_area :description, :class => 'text'
        %p
          %span
            = I18n.t('keyword', :count => 2).capitalize
            \:
          = f.text_field :keywords, :class => 'text'
    .step.disabled
      %a.small-icons.step-title{ :href => "#" }
        Graphic template
      .inner-step.glossy
        %select{ :name => "design" }
          %option{ :selected => "selected", :value => "default" }
            Corporate blue design
          %option{ :value => "no" }
            Corporate green design
      .clear
  .clear
