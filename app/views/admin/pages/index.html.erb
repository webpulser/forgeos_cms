<h1><%= I18n.t('page.list').capitalize %></h1>

<% content_for :tools do %>
  <%= link_to(I18n.t('page.create.action').capitalize, new_admin_page_path, :class => 'add' ) %>
<% end %>

<div id="list_pages">
  <table id="table">
    <thead>
      <tr>
        <th><%= I18n.t('title').capitalize %></th>
        <th><%= I18n.t('url').capitalize %></th>
        <th><%= I18n.t('section.one').capitalize %></th>
        <th><%= I18n.t('linked_blocks').capitalize %></th>
        <th><%= I18n.t('active').capitalize %></th>
        <th><%= I18n.t('action', :count => 2).capitalize %></th>
      </tr>
    </thead>

    <tbody>
      <% unless @pages.nil? or @pages.blank? %>
        <% @pages.each do |page| %>
          <tr class="<%= cycle('even', 'odd') %>">
            <td><%= link_to page.title, admin_page_path(page) %></td>
            <td><%= page.url %></td>
            <td><%= page.section ? page.section.title : '-' %></td>
            <td><%= page.blocks.size %></td>
            <td><%= page.active ? I18n.t('_yes').capitalize : I18n.t('_no').capitalize %></td>
            
            <td>
              <%= link_to I18n.t('edit').capitalize, edit_admin_page_path(page) %>
              -
              <%= link_to I18n.t('delete').capitalize, admin_page_path(page), :confirm => I18n.t('page.destroy.confirm').capitalize, :method => :delete %>
              -
              <%= link_to I18n.t('block.update.action', :count => 2).capitalize, admin_page_blocks_path(page) %>
            </td>
          </tr>
        <% end %>

      <% else %>
        <tr> 
          <td colspan="6"><%= I18n.t('page.none').capitalize %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= dataTables_tag(6) %>
