<h1><%= I18n.t('right', :count => 2).capitalize %></h1>

<% content_for :tools do %>
  <%= link_to(I18n.t('right.create.action').capitalize, new_admin_right_path, :class => 'add') %>
<% end %>

<table id="table">
  <thead>
    <tr>
      <th><%= I18n.t('form.field.name').capitalize %></th>
      <th><%= I18n.t('controller_name').capitalize %></th>
      <th><%= I18n.t('action_name').capitalize %></th>
      <th><%= I18n.t('action', :count => 2).capitalize %></th>
    </tr>
  </thead>

  <tbody>
    <% unless @rights.nil? or @rights.blank? %>
      <% @rights.each do |right| %>
        <tr class="<%= cycle('even', 'odd') %>">
          <td><%=h right.name %></td>
          <td><%=h right.controller_name %></td>
          <td><%=h right.action_name %></td>
          <td>
            <%= link_to I18n.t('show').capitalize, admin_right_path(right) %> -
            <%= link_to I18n.t('edit').capitalize, edit_admin_right_path(right) %> -
            <%= link_to I18n.t('destroy').capitalize, admin_right_path(right), :confirm => I18n.t('right.destroy.confirm').capitalize, :method => :delete %>
          </td>
        </tr>
      <% end %>

    <% else %>
      <tr> 
        <td colspan="4"><%= I18n.t('right.none').capitalize %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= javascript_tag "$($('#table').dataTable({
        'aoColumns': [
            null,
            null,
            null,
            { 'bSearchable': false, 'bSortable': false }
        ],
        'oLanguage': { 
        'sProcessing':'#{I18n.t('jquery.dataTables.oLanguage.sProcessing')}',
        'sLengthMenu':'#{I18n.t('jquery.dataTables.oLanguage.sLengthMenu')}',
        'sZeroRecords':'#{I18n.t('jquery.dataTables.oLanguage.sZeroRecords')}',
        'sInfo':'#{I18n.t('jquery.dataTables.oLanguage.sInfo')}',
        'sInfoEmpty':'#{I18n.t('jquery.dataTables.oLanguage.sInfoEmpty')}',
        'sSearch':'#{I18n.t('jquery.dataTables.oLanguage.sSearch')}' }
    }
))" %>
