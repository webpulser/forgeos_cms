<%= render :partial => 'top_links', :locals => { :role => @role } %>
<h1><%= I18n.t('role.show').capitalize %></h1>
<p>
  <b><%= I18n.t('form.field.name').capitalize %> : </b>
  <%=h @role.name %>
</p>

<p>
  <b><%= I18n.t('rights',:count => 2).capitalize %> : <b>
  <table>
  <% @role.rights.in_groups_of(4,false).each do |right_group| %>
    <tr>
    <% right_group.each do |right| %>
      <td>
      <%=h right.name %>
      </td>
    <% end %>
    </tr>
  <% end %>
  </table>
</p>
