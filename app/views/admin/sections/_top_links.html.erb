<% content_for :tools do %>
  <%= link_to(I18n.t('list').capitalize, { :action => 'index' }, :class => 'house' ) %>
<% end %>

<% if section && !(section.new_record?) %>
  <% content_for :tools do %>
    <%= link_to(I18n.t('show').capitalize, { :action => 'show', :id => section.id }) %>
    <%= link_to(I18n.t('edit').capitalize, { :action => 'edit', :id => section.id }) %>
    <%= link_to(I18n.t('destroy').capitalize, { :action => 'delete', :id => section.id }, :confirm => I18n.t('section.destroy.confirm').capitalize) %>
  <% end %>
<% end %>
