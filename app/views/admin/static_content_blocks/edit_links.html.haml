%h1
  = I18n.t('link_static_content_block_page').capitalize
%h2
  = I18n.t('static_content_block', :count => 1).capitalize
  \-
  = @static_content_block.title if @static_content_block
- if @static_content_block
  - form_for [:update_links, :admin, @static_content_block] do |f|
    %p
      %h3
        = I18n.t('page.other').capitalize
      - selected_pages = @static_content_block.pages.collect {|page| page.id.to_i }
      = select_tag 'static_content_block[page_ids][]', '<option value="">' + I18n.t('none').capitalize + '</option>' << options_from_collection_for_select(@pages, "id", "title", selected_pages), { :multiple => true, :disabled => @disabled }
    = submit_tag I18n.t('save').capitalize
