= render :partial => 'admin/menus/lang_switcher'
= render :partial => 'admin/blocks/tabs'
#wrap
  .backgrounds.big-header
    %h1
      = @static_content_block.title
    .interact-links
      = link_to I18n.t('static_content_block.update.action', :count => 1).capitalize, [:edit, :admin, @static_content_block ], :class => 'backgrounds interact-button'
      = I18n.t('or')
      = link_to I18n.t('static_content_block.back').capitalize, forgeos_cms.admin_static_content_blocks_path, :class => 'back-link'
  #content.grid_16.alpha.omega
    .grid_12.alpha
      .inner-content
        .block-content
          = @static_content_block.content
    #right-sidebar.grid_4.omega
      .step
        -# = link_to I18n.t('static_content_block.preview').capitalize, '#', :class => 'small-icons preview'
        = content_tag :span, I18n.t('static_content_block.preview').capitalize, :class => 'small-icons preview disabled'
        = link_to I18n.t('static_content_block.duplicate').capitalize, forgeos_cms.duplicate_admin_static_content_block_path(@static_content_block), :class => 'small-icons duplicate'
        = link_to I18n.t('static_content_block.delete').capitalize, [:admin, @static_content_block], :confirm => I18n.t('static_content_block.destroy.confirm').capitalize, :method => :delete, :class => 'small-icons delete'
        .clear
    .clear
