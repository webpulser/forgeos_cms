= render :partial => 'tabs'
#sidebar.grid_4.omega.alpha
  .backgrounds.header
    %span.backgrounds.action-button
      %span.big-icons.new-category
      %span.small-icons.arrow
    %span.backgrounds.action-button
      %span.small-icons.more-actions
      %span.small-icons.arrow
  .backgrounds.sidebar-background
  .sidebar-content
    %h2.small-icons.widgets
      = link_to I18n.t('widget.all').capitalize, admin_widgets_path
    #widget-tree
      %ul
        = render :partial => 'admin/categories/list', :locals => { :categories => WidgetCategory.find_all_by_parent_id(nil) }

#content.grid_12.alpha.omega
  .backgrounds.header
    %span.backgrounds.action-button.widget-action
      %span.big-icons.create-widget
        = I18n.t('widget.create.action').capitalize
      %span.small-icons.arrow
      %span.widget-list
        %span.widget-item
          = link_to I18n.t('carousel.create.action').capitalize, new_admin_carousel_path
        %span.widget-item
          = link_to I18n.t('wactuality.create.action').capitalize, new_admin_wactuality_path
  
    #search.right
      = link_to content_tag(:span, I18n.t('search').capitalize, :class => 'small-icons search-span'), '#', :class => 'small-icons left search-link'
    .backgrounds.search-form
  .content-background
  %table#table.datatable
    %thead
      %tr
        %th
        %th
          = I18n.t('widget.type').capitalize
        %th
          = I18n.t('widget.name').capitalize
        %th
          = I18n.t('linked_to').capitalize
    %tbody
= dataTables_tag 4, :url => admin_widgets_path(:format => :json)

.lightbox-container
  #page-tree.pages-tree
    %ul
      = render :partial => 'admin/categories/list_pages', :locals => { :categories => @page_categories, :pages => @pages }
